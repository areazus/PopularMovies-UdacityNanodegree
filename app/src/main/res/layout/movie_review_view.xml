<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView android:id="@+id/movie_review_Content"
              android:textSize="18dp"
              android:layout_margin="15dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

    <TextView android:id="@+id/movie_review_Author"
              android:textSize="15dp"
              android:layout_marginRight="40dp"
              android:layout_marginBottom="10dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_below="@id/movie_review_Content"/>

    <View    android:id="@+id/detailed_movie_line_below_overview"
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="#FF4081"
             android:layout_below="@id/movie_review_Author"
             android:layout_centerVertical="true"/>

</RelativeLayout>